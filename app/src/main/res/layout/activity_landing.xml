<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B2A4A">

    <!-- Curved neon title -->
    <com.example.project1_triviagame.ui.CurvedTitleView
        android:id="@+id/curvedTitle"
        android:layout_width="0dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Carousel row -->
    <ImageButton
        android:id="@+id/btnLeft"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_media_previous"
        android:tint="#8C817A"
        app:layout_constraintTop_toBottomOf="@id/curvedTitle"
        app:layout_constraintBottom_toTopOf="@id/btnPlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.25"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hangmanCarousel"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:overScrollMode="never"
        app:layout_constraintStart_toEndOf="@id/btnLeft"
        app:layout_constraintEnd_toStartOf="@id/btnRight"
        app:layout_constraintTop_toBottomOf="@id/curvedTitle"
        app:layout_constraintBottom_toTopOf="@id/btnPlay"
        app:layout_constraintVertical_bias="0.25"/>

    <ImageButton
        android:id="@+id/btnRight"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_media_next"
        android:tint="#8C817A"
        app:layout_constraintTop_toBottomOf="@id/curvedTitle"
        app:layout_constraintBottom_toTopOf="@id/btnPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.25"/>

    <!-- Play button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPlay"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:text="Play"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:letterSpacing="0.12"
        android:backgroundTint="#8C817A"
        app:cornerRadius="14dp"
        app:strokeWidth="0dp"
        app:strokeColor="#8C817A"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/hangmanCarousel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Counters -->
    <LinearLayout
        android:id="@+id/counterRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/btnPlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvWins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wins: 0"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/tvLosses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Losses: 0"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>